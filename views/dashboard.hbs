<h2>OpenStack informations: </h2>
<h3>System limits</h3>
<ul class="systems-limits">
{{#limits.absolute}}
    <li>maxServerMeta: {{maxServerMeta}}</li>
    <li>maxPersonality: {{maxPersonality}}</li>
    <li>maxImageMeta: {{maxImageMeta}}</li>
    <li>maxPersonalitySize: {{maxPersonalitySize}}</li>
    <li>maxSecurityGroupRules: {{maxSecurityGroupRules}}</li>
    <li>maxTotalKeypairs: {{maxTotalKeypairs}}</li>
    <li>totalRAMUsed: {{totalRAMUsed}}</li>
    <li>totalInstancesUsed: {{totalInstancesUsed}}</li>
    <li>maxSecurityGroups: {{maxSecurityGroups}}</li>
    <li>totalFloatingIpsUsed: {{totalFloatingIpsUsed}}</li>
    <li>maxTotalCores: {{maxTotalCores}}</li>
    <li>totalSecurityGroupsUsed: {{totalSecurityGroupsUsed}}</li>
    <li>maxTotalFloatingIps: {{maxTotalFloatingIps}}</li>
    <li>maxTotalInstances: {{maxTotalInstances}}</li>
    <li>totalCoresUsed: {{totalCoresUsed}}</li>
    <li>maxTotalRAMSize: {{maxTotalRAMSize}}</li>
{{/limits.absolute}}
</ul>
<h3>Images</h3>
{{#if images.length}}
    {{images.length}} Nova flavors available:
    <ul class="openstack-images">
    {{#each images}}
        <li data-id="{{id}}">{{name}} - Status: {{status}} - DataType: {{links.[2].type}} - href: {{links.[0].href}}</li>
    {{/each}}
    </ul>
{{else}}
    There's currently no images configured
{{/if}}
<button type="button" class="create-image">Create image</button>

<h3>Nova flavors</h3>
{{#if flavors.length}}
    {{flavors.length}} Nova flavors available:
    <ul class="openstack-flavors">
    {{#each flavors}}
        <li data-id="{{id}}">{{name}} - Status: {{status}} - RAM: {{ram}} - href: {{links.[0].href}}</li>
    {{/each}}
    </ul>
{{else}}
    There's currently no nova flavors configured
{{/if}}
<button type="button" class="create-flavor">Create Nova Flavor</button>

<h3>Servers</h3>
{{#if servers.length}}
    {{servers.length}} servers available:
    <ul class="openstack-servers">
    {{#each servers}}
        <li data-id="{{id}}">{{name}} - Status: {{status}} - href: {{links.[0].href}}</li>
    {{/each}}
    </ul>
{{else}}
    There's currently no nova flavors configured
{{/if}}
<button type="button" class="create-server">Create Server</button>

<h3>Networks</h3>
{{#if networks.length}}
    {{networks.length}} servers available:
    <ul class="openstack-networks">
    {{#each networks}}
        <li data-id="{{id}}" data-tenant="{{tenant_id}}">{{name}} - Status: {{status}} - type: {{provider:network_type}}</li>
    {{/each}}
    </ul>
{{else}}
    There's currently no nova flavors configured
{{/if}}
<button type="button" class="create-network">Create Network</button>

